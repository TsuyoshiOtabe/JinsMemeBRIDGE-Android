<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#607D8B"
  tools:context="com.jins_meme.bridge.OSCConfigFragment">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">
        <RelativeLayout
          android:id="@+id/osc_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:focusableInTouchMode="true">
            <TextView
              android:id="@+id/textView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_marginStart="20dp"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:text="リモート設定"/>
            <TextView
              android:id="@+id/textView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginStart="15dp"
              android:layout_alignStart="@+id/textView"
              android:layout_below="@+id/textView"
              android:text="IPアドレス"/>
            <EditText
              android:id="@+id/remote_ip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:layout_alignStart="@+id/textView7"
              android:layout_below="@+id/textView7"
              android:layout_toStartOf="@+id/remote_test"
              android:digits="0123456789."
              android:ems="10"
              android:inputType="number|numberDecimal"
              android:text="192.168.1.255"/>
            <TextView
              android:id="@+id/textView8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_alignStart="@+id/remote_ip"
              android:layout_below="@+id/remote_ip"
              android:text="ポート番号"/>
            <EditText
              android:id="@+id/remote_port"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignEnd="@+id/remote_ip"
              android:layout_alignStart="@+id/textView8"
              android:layout_below="@+id/textView8"
              android:ems="10"
              android:inputType="number"
              android:maxLength="5"
              android:text="10316"/>
            <TextView
              android:id="@+id/textView9"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_alignStart="@+id/textView"
              android:layout_below="@+id/remote_port"
              android:text="ホスト設定"/>
            <TextView
              android:id="@+id/textView10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_alignStart="@+id/remote_port"
              android:layout_below="@+id/textView9"
              android:text="IPアドレス"/>
            <EditText
              android:id="@+id/host_ip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignStart="@+id/textView10"
              android:layout_below="@+id/textView10"
              android:digits="0123456789."
              android:ems="10"
              android:inputType="number|numberDecimal"
              android:text="0.0.0.0"
              android:layout_alignEnd="@+id/remote_port"/>
            <TextView
              android:id="@+id/textView11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_alignStart="@+id/host_ip"
              android:layout_below="@+id/host_ip"
              android:text="ポート番号"/>
            <EditText
              android:id="@+id/host_port"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:inputType="number"
              android:maxLength="5"
              android:text="11316"
              android:layout_below="@+id/textView11"
              android:layout_alignStart="@+id/textView11"
              android:layout_alignEnd="@+id/host_ip"/>
            <Button
              android:id="@+id/remote_test"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/remote_port"
              android:layout_alignTop="@+id/remote_port"
              android:layout_toStartOf="@+id/space4"
              android:text="テスト送信"
              android:textSize="10sp"/>
            <Space
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:layout_alignParentEnd="true"
              android:layout_alignParentTop="true"
              android:id="@+id/space4"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
