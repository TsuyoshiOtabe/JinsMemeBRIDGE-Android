<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/card_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:foreground="?android:attr/selectableItemBackground"
  android:stateListAnimator="@animator/card_raise"
  card_view:cardBackgroundColor="#90CAF9"
  card_view:cardElevation="2sp"
  card_view:cardUseCompatPadding="true">
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.8"/>
    <ImageView
      android:id="@+id/funcicon"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.6"
      />
    <TextView
      android:id="@+id/card_text"
      android:textStyle="normal|bold"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.35"
      android:fontFamily="sans-serif-medium"
      android:gravity="center_vertical|center_horizontal"
      android:text="SAMPLE"
      android:textAlignment="center"
      android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
      android:textColor="#FFFFFF"
      android:textSize="32sp"/>
    <TextView
      android:id="@+id/card_subtext"
      android:textStyle="italic"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5"
      android:text=""
      android:textAlignment="center"
      android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
      android:textColor="#FFFFFF"
      android:textSize="48sp"/>
    <TextView
      android:id="@+id/card_select"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5"
      android:textAlignment="center"
      android:textColor="#FFFFFF"
      android:textSize="25sp"/>
    <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.3"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.1"/>

  </LinearLayout>
</android.support.v7.widget.CardView>