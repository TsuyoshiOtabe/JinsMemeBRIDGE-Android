<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  tools:context="com.jins_meme.bridge.OSCConfigFragment">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">
        <LinearLayout
          android:id="@+id/osc_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:divider="@drawable/border_line"
          android:focusableInTouchMode="true"
          android:orientation="vertical"
          android:showDividers="middle">
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginBottom="25dp"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:divider="@drawable/border_line"
              android:orientation="vertical"
              android:showDividers="middle">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="15dp"
                  android:text="REMOTE SETTING"
                  android:textColor="@color/no3"/>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:divider="@drawable/border_subline"
                  android:orientation="vertical"
                  android:showDividers="middle">
                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="15dp"
                      android:orientation="vertical">
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="IP ADDRESS"
                          android:textColor="#000000"/>
                        <EditText
                          android:id="@+id/remote_ip"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:digits="0123456789."
                          android:ems="10"
                          android:inputType="number|numberDecimal"
                          android:text="192.168.1.255"/>
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Set the destination IP address"
                          android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:orientation="vertical">
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="PORT NUMBER"
                          android:textColor="#000000"/>
                        <EditText
                          android:id="@+id/remote_port"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:ems="10"
                          android:inputType="number"
                          android:maxLength="5"
                          android:text="10316"/>
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Set the destination port number"
                          android:textSize="12sp"/>
                        <Button
                          android:id="@+id/remote_test"
                          android:layout_width="80dp"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="-45dp"
                          android:layout_gravity="end"
                          android:text="TEST"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              android:layout_marginBottom="25dp"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:divider="@drawable/border_line"
              android:orientation="vertical"
              android:showDividers="middle">
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="15dp"
                  android:text="HOST SETTING"
                  android:textColor="@color/no3"/>
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:divider="@drawable/border_subline"
                  android:orientation="vertical"
                  android:showDividers="middle">
                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="15dp"
                      android:orientation="vertical">
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="IP ADDRESS"
                          android:textColor="#000000"/>
                        <EditText
                          android:id="@+id/host_ip"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:digits="0123456789."
                          android:ems="10"
                          android:inputType="number|numberDecimal"
                          android:text="0.0.0.0"/>
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="This device's IP address"
                          android:textSize="12sp"/>
                    </LinearLayout>
                    <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:orientation="vertical">
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="PORT NUMBER"
                          android:textColor="#000000"/>
                        <EditText
                          android:id="@+id/host_port"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:ems="10"
                          android:inputType="number"
                          android:maxLength="5"
                          android:text="11316"/>
                        <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="The receiving port number of this device"
                          android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
