            android:text="SEND SIGNAL 3"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/remo_signal_3_set_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:orientation="vertical"
          android:clickable="true">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:text="SIGNAL 3 LABEL"/>
          <TextView
            android:id="@+id/remo_signal_3_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="signal 3 name"
            android:textSize="12sp"/>
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:divider="@drawable/border_subline"
        android:orientation="vertical"
        android:showDividers="middle">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:divider="@drawable/border_line"
          android:orientation="vertical"
          android:showDividers="middle">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="SIGNAL 4"
            android:textColor="@color/no3"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/remo_signal_4_receive"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:orientation="vertical"
          android:clickable="true">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:text="LEARN SIGNAL 4"/>
        </LinearLayout>
        <LinearLayout
          android:id="@+id/remo_signal_4_send"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:orientation="vertical"
